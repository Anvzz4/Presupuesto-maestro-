        print(f"El importe de venta total del 2011 es {imp_de_ve1CR + imp_de_ve2CR}")

        Tot_Ventas_Sem1 = (imp_de_ve1CL+imp_de_ve1CE+imp_de_ve1CR)
        Tot_Ventas_Sem2 = (imp_de_ve2CL+imp_de_ve2CE+imp_de_ve2CR)
        print(f"El total de Ventas Por semestre (1er. Semestre) es de {Tot_Ventas_Sem1}")
        print(f"El total de Ventas Por semestre (2do. Semestre) es de {Tot_Ventas_Sem2}")   
        print(f"El total de Ventas Por semestre (TOTAL) es de {Tot_Ventas_Sem1 + Tot_Ventas_Sem2}")    
    
    if opcion == 2:
        print("\n2. Determinacion del saldo de Clientes y Flujo de Entradas\n")
        saldo_clientes2020 = int(input("Ingrese el saldo de la cuenta 'CLIENTES' del 31-Dic-2020: "))
        Ventas_2021 = int(input("Ingrese las Ventas del 2021: "))
        total_clientes2021 = (saldo_clientes2020 + Ventas_2021)
        print(f"El Total de Clientes 2021' es {total_clientes2021}")
        print(f"El 100% Por cobranza del 2020 es {saldo_clientes2020}")
        cobranza_2021 = (Ventas_2021 * 0.75)
        print(f"El 80% Por cobranza del 2021 es {cobranza_2021}")
        entradas_2021 = (cobranza_2021 + saldo_clientes2020)
        print(f"El Total de Entradas 2021 es {entradas_2021}")
        print(f"Saldo de Clientes 2021 es {total_clientes2021 - entradas_2021}")
        saldo_clientes = total_clientes2021 - entradas_2021
        
