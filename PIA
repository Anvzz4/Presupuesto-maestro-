        print(f"Las unidades a vender en total son {tot_uds_TOT}")
        print(f"El inventario final total es {In_final2CL}")
        Total_Unidades = (tot_uds_TOT + In_final2CL)
        print(f"El total de unidades {Total_Unidades} ")
        print(f"El inventario inicial del total es {In_final1CL}")
        print(f"Las unidades a producir totales son {Total_Unidades - In_final1CL}")

