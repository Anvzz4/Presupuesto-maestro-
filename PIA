separador = ("*" * 30)
def menu_principal():
    print("\n- MENÚ PRINCIPAL -")
    print("[1] Presupuesto de Ventas")
    print("[2] Determinacion del saldo de Clientes y Flujo de Entradas")
    print("[3] Presupuesto de Produccion")
    print("[4] Presupuesto de Requerimiento de Materiales")
    print("[5] Presupuesto de Compra de Materiales")
    print("[6] Determinacion del saldo de Proveedores y Flujo de Salidas")
    print("[7] Presupuesto de Mano de Obra Directa")
    print("[8] Presupuesto de Gastos Indirectos de Fabricacion")
    print("[9] Presupuesto de Gastos de Operacion")
    print("[10] Determinacion del Costo Unitario de Productos Terminados")
    print("[11] Valuacion de Inventarios Finales")
    print("[12] Estado de Costo de Producción y Ventas")
    print("[13] Estado de Resultados")
    print("[14] Estado de Flujo de Efectivo")
    print("[15] Balance General")
    
ciclo = True
while ciclo:
    continuar = True
    menu_principal()
    opcion = float(input("\nElige el número de la opción que desee: "))
    
    if opcion == 1:
        print("\n1. Presupuesto de Ventas\n")
        print("PRODUCTO 1")
        print("SEMESTRE 1")
        uni_a_ve1CL = int(input("Ingrese las unidades a vender del semestre 1: "))
        precio_de_ve1CL = int(input("Ingrese el precio de venta del semestre 1: "))
        imp_de_ve1CL = (uni_a_ve1CL * precio_de_ve1CL)
        print(f"El importe de venta del semestre 1 del PRODUCTO 1 es {imp_de_ve1CL}")
        print("SEMESTRE 2")
        uni_a_ve2CL = int(input("Ingrese las unidades a vender del semestre 2: "))
        precio_de_ve2CL = int(input("Ingrese el precio de venta del semestre 2: "))
        imp_de_ve2CL = (uni_a_ve2CL * precio_de_ve2CL)
        print(f"El importe de venta del semestre 2 del PRODUCTO 1 es {imp_de_ve2CL}")
        print(f"El importe de venta total del 2011 es {imp_de_ve1CL + imp_de_ve2CL}")
        print(separador)

        print("PRODUCTO 2")
        print("SEMESTRE 1")
        uni_a_ve1CE = int(input("Ingrese las unidades a vender del semestre 1: "))
        precio_de_ve1CE = int(input("Ingrese el precio de venta del semestre 1: "))
        imp_de_ve1CE = (uni_a_ve1CE * precio_de_ve1CE)
        print(f"El importe de venta del semestre 1 del PRODUCTO 2 es {imp_de_ve1CE}")
        print("SEMESTRE 2")
        uni_a_ve2CE = int(input("Ingrese las unidades a vender del semestre 2: "))
        precio_de_ve2CE = int(input("Ingrese el precio de venta del semestre 2: "))
        imp_de_ve2CE = (uni_a_ve2CE * precio_de_ve2CE)
        print(f"El importe de venta del semestre 2 del PRODUCTO 2 es {imp_de_ve2CE}")
        print(f"El importe de venta total del 2011 es {imp_de_ve1CE + imp_de_ve2CE}")
        print(separador)

        print("PRODUCTO 3")
        print("SEMESTRE 1")
        uni_a_ve1CR = int(input("Ingrese las unidades a vender del semestre 1: "))
        precio_de_ve1CR = int(input("Ingrese el precio de venta del semestre 1: "))
        imp_de_ve1CR = (uni_a_ve1CR * precio_de_ve1CR)
        print(f"El importe de venta del semestre 1 del PRODUCTO 3 es {imp_de_ve1CR}")
        print("SEMESTRE 2")
        uni_a_ve2CR = int(input("Ingrese las unidades a vender del semestre 2: "))
        precio_de_ve2CR = int(input("Ingrese el precio de venta del semestre 2: "))
        imp_de_ve2CR = (uni_a_ve2CR * precio_de_ve2CR)
