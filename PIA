        Provedores2011 = float(input("Dime el saldo de Provedores en 2021: "))
        Provedores2010 = float(input("Dime el saldo de Provedores en 2020: "))
        PagoManoDeObraDir = float(input("Dime el presupuesto de Mano de Obra Directa: "))
        PagoGasIndFabricaion = float(input("Dime el presupuesto de Gastos Indirectos de Fabricacion: "))
        PagoGasOperacion = float(input("Dime el presupuesto de gastos de operacion: "))
        CompraActivoFijo = float(input("Dime la cantidad de Compra de Activo Fijo: "))
        PagoISR2010 = float(input("Dime el pago ISR del año 2020: "))
        tot_salidas = (Provedores2011 + Provedores2010 + PagoManoDeObraDir + PagoGasIndFabricaion + PagoGasOperacion + CompraActivoFijo + PagoISR2010)
        print(f"Total de salidas: {tot_salidas}")
        print(f"Flujo de Efectivo Actual: {efec_disponible - tot_salidas}")
        efectivo_actual = efec_disponible - tot_salidas


    if opcion == 15:
        print("\nBALANCE GENERAL")
        print("\nDatos para completar Balance General\n")
        print("ACTIVO ")
        print("Circulante")
        deud = float(input("Dime el valor de deudores diversos: "))
        funyemp = float(input("Dime el valor de funcionarios y empleados: "))
        print("\n")
        print("No Circulante")
        ter = float(input("Dime  el terreno: "))
        pye = float(input("Dime el valor de planta y equipo: "))
        deacu = float(input("Dime el valor de depreciacion acumulada: "))
        print("\n")
        print("PASIVO ")
        print("Corto Plazo")
        docpp = float(input("Dime el valor de documentos por pagar: "))
        print("\n")
        print("Largo Plazo")
        obpp = float(input("Dime  el valor Prestamos Bancarios: "))
        print("\n")
        print("CAPITAL CONTABLE ")
        ca = float(input("Dime  el valor de capital aportado: "))
        cg = float(input("Dime el valor de capital ganado: "))
        print("\n")

        print("BALANCE GENERAL")
        print("\nACTIVO ")
        print(f"Efectivo: {efectivo_actual}")
        print(f"Clientes: {saldo_clientes}")
        print(f"Deudores Diversos: {deud}")
        print(f"Inventario de materiales: {inventario_fifinal}")
        print(f"Funcionarios y empleados: {funyemp}")
        print(f"Inventario de productos terminados: {producto_teterminado}")
        ttldac = (efectivo_actual + saldo_clientes + deud + inventario_fifinal+ funyemp  + producto_teterminado)
        print(f"El total de activos circulantes es: {ttldac}")
        print(separador)


        print("\nNo Circulante")
        print(f"Terreno: {ter}")
        print(f"Planta y equipo: {pye}")
        print(f"Depreciacion Acumulada : {deacu}")
        ttldanc = (ter + pye - deacu)
        print(f"El total de activos no circulantes es: {ttldanc}")
        print(separador)
        ttlda = (ttldac + ttldanc)
        print(f"El total de activos  es: {ttlda}")
        print(separador)

        print("\nPASIVO ")
        print("Corto Plazo")
        print(f"Proveedores: {proveedores_total}")
        print(f"Documentos por pagar: {docpp}")
        print(f"ISR por pagar: {ISR}")
        print(f"PTU por pagar: {PTU}")
        ttldpcp = (proveedores_total + docpp + ISR + PTU)
        print(f"El total de pasivos corto plazo es: {ttldpcp}")
        print(separador)

        print("Largo Plazo")
        print(f"Prestamos Bancarios: {obpp}")
        ttldplp = (obpp)
        print(f"El total de pasivos largo plazo es: {ttldplp}")

        print(separador)
        ttldp = (ttldpcp + ttldplp)
        print(f"El total de pasivo  es: {ttldp}")
        print(separador)

        print("\nCAPITAL CONTABLE ")
        print(f"Capital Aportado: {ca}")
        print(f"Capital Ganado: {cg}")
        print(f"Utilidad del ejercicio: {Utilidad_neta}")
        ttldcp = (ca + cg + Utilidad_neta)
        print(f"El total de capital contable  es: {ttldcp}")
        print(separador)
        sudpyc = (ttldcp + ttldp)
        print(f"El total de la suma de pasivo y capital   es: {sudpyc}")
